<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudyN.Views.AddTaskPage"
             xmlns:dxc="clr-namespace:DevExpress.Maui.Charts;assembly=DevExpress.Maui.Charts"
             xmlns:dxe="clr-namespace:DevExpress.Maui.Editors;assembly=DevExpress.Maui.Editors"
             Title="Add Task">
    <ContentPage.Content>
        <!--Grid for organizing -->
        <Grid Margin="10">
            <!--Grid rows definitions-->
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="100" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <!--Grid column definitions-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
    
            <!--task name box GridRow 1 Spans 2 columns-->
            <Entry
                    Grid.ColumnSpan="2"
                    MaxLength="20"
                    Style="{StaticResource CommonEntryStyle}"
                    Text="Enter Task Name" />
            <BoxView Grid.Row="1"/>
            
            <!--task discription box GridRow 2 Spans 2 columns-->
            <Entry
                    Grid.ColumnSpan="2"
                    Grid.Row="1"
                    MaxLength="200"
                    Style="{StaticResource CommonEntryStyle}"
                    Text="Enter Event discription (200 character max)" />
            <BoxView Grid.Row="2"/>

            <!--Time Entry Box GridRow 3 Spans 1 Column-->
            <dxe:TimeEdit TimeFormatMode="HourFormat12"
                Grid.Row="2"
                Grid.ColumnSpan="1"
                LabelText="Time Due"
                IsLabelFloating="True"
             />

            <!--Date Entry box GridRow 3 Spans 1 Column-->
            <dxe:DateEdit DisplayFormat="d"
                          Grid.Row="2"
                          Grid.Column="1"
                          Grid.ColumnSpan="1"
                          LabelText="Date Due"
                          IsLabelFloating="True"/>

            
            <Entry
                    Grid.ColumnSpan="1"
                    Grid.Row="3"
                    MaxLength="50"
                    Style="{StaticResource CommonEntryStyle}"
                    Text="Time Spent On Task" />
            <BoxView Grid.Row="2"/>
            
            
            <Entry
                    Grid.ColumnSpan="1"
                    Grid.Column="1"
                    Grid.Row="3"
                    MaxLength="50"
                    Style="{StaticResource CommonEntryStyle}"
                    Text="Time To Complete" />
            <BoxView Grid.Row="2"/>

            <Slider Maximum="5"
                ValueChanged="OnSliderValueChanged" 
                    Grid.Row="4"
                    Grid.ColumnSpan="2"/>
            
            <Label x:Name="displayLabel"
               Text="Priority"
               HorizontalOptions="Center"
               VerticalOptions="Center" 
               Grid.Row="5"
               Grid.ColumnSpan="2"
                   />


        </Grid>
    </ContentPage.Content>

</ContentPage>