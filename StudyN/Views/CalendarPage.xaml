<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dxsch="clr-namespace:DevExpress.Maui.Scheduler;assembly=DevExpress.Maui.Scheduler"
             xmlns:ViewModels="clr-namespace:StudyN.ViewModels"
             xmlns:dxco="clr-namespace:DevExpress.Maui.Controls;assembly=DevExpress.Maui.Controls"
             Title="Calendar Page"
             IconImageSource="scheduler"
             BackgroundColor="{StaticResource NormalBackgroundColor}"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             ios:Page.UseSafeArea="true"
             x:Class="StudyN.Views.CalendarPage">
    <ContentPage.BindingContext>
        <ViewModels:ItemsViewModel />
    </ContentPage.BindingContext>
    <Shell.TitleView>
        <StackLayout
            Orientation="Horizontal"
            HorizontalOptions="Center"
            Spacing="5">
            
            <Button Text="?"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            BorderColor="Black"
            BorderWidth=".25"
            TextColor="Black"
            BackgroundColor="White"
            Clicked="OnClickOpenHowToUse"
            ></Button>
            
            <Button Text="Daily"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            BorderColor="Black"
            BorderWidth="1"
            TextColor="Black"
            BackgroundColor="White"
            Clicked="OnDailyClicked"
            ></Button>
            <Button Text="Weekly"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            BorderColor="Black"
            BorderWidth="1"
            TextColor="Black"
            BackgroundColor="White"
            Clicked="OnWeeklyClicked"
            ></Button>
            <Button Text="Monthly"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            BorderColor="Black"
            TextColor="Black"
            BorderWidth="1"
            BackgroundColor="White"
            Clicked="OnMonthlyClicked"
            ></Button>
        </StackLayout>
    </Shell.TitleView>
    <ContentPage.Content>
        <StackLayout>
            <dxsch:DayView x:Name="dayView"
                           Tap="CalenderSingleTap"
                           DoubleTap="CalenderDoubleTap">
                <dxsch:DayView.DataStorage>
                    <dxsch:SchedulerDataStorage>
                        <dxsch:SchedulerDataStorage.DataSource>
                            <dxsch:DataSource AppointmentsSource="{Binding CalenderItems}">
                                <dxsch:DataSource.AppointmentMappings>
                                    <dxsch:AppointmentMappings 
                                    Id="Id" 
                                    Start="StartTime" 
                                    End="EndTime" 
                                    Subject="Text"
                                    />
                                </dxsch:DataSource.AppointmentMappings>
                            </dxsch:DataSource>
                        </dxsch:SchedulerDataStorage.DataSource>
                    </dxsch:SchedulerDataStorage>
                </dxsch:DayView.DataStorage>
            </dxsch:DayView>
            <dxsch:WeekView x:Name="weekView"
                            Tap="CalenderSingleTap"
                            DoubleTap="CalenderDoubleTap">
                <dxsch:WeekView.DataStorage>
                    <dxsch:SchedulerDataStorage>
                        <dxsch:SchedulerDataStorage.DataSource>
                            <dxsch:DataSource AppointmentsSource="{Binding CalenderItems}">
                                <dxsch:DataSource.AppointmentMappings>
                                    <dxsch:AppointmentMappings 
                                    Id="Id" 
                                    Start="StartTime" 
                                    End="EndTime" 
                                    Subject="Text"
                                    />
                                </dxsch:DataSource.AppointmentMappings>
                            </dxsch:DataSource>
                        </dxsch:SchedulerDataStorage.DataSource>
                    </dxsch:SchedulerDataStorage>
                </dxsch:WeekView.DataStorage>
            </dxsch:WeekView>
            <dxsch:MonthView x:Name="monthView"
                             Tap="CalenderSingleTap"
                             DoubleTap="CalenderDoubleTap">
                <dxsch:MonthView.DataStorage>
                    <dxsch:SchedulerDataStorage>
                        <dxsch:SchedulerDataStorage.DataSource>
                            <dxsch:DataSource AppointmentsSource="{Binding CalenderItems}">
                                <dxsch:DataSource.AppointmentMappings>
                                    <dxsch:AppointmentMappings 
                                    Id="Id" 
                                    Start="StartTime" 
                                    End="EndTime" 
                                    Subject="Text"
                                    />
                                </dxsch:DataSource.AppointmentMappings>
                            </dxsch:DataSource>
                        </dxsch:SchedulerDataStorage.DataSource>
                    </dxsch:SchedulerDataStorage>
                </dxsch:MonthView.DataStorage>
            </dxsch:MonthView>

            <dxco:DXPopup x:Name="Popup">
                <StackLayout WidthRequest="300" BackgroundColor="AliceBlue">
                    <Label Text="How to use the Calender Page"
                        TextColor="{StaticResource NormalText}"
                        Margin="5, 5"/>
                    <Label Text="To view a Daily View, click the Daily button."/>
                    <Label Text="To view a Weekly View, click the Weekly button."/>
                    <Label Text="To view a Monthly View, click the Monthly button."/>
                    <Label Text="To create a new appointment, double tap a time block."/>
                    <Label Text="To edit an appointment, double tap an existing appointment."/>
                    <Label Text="To view an appointment to delete it, single tap an existing appoint."/>

                </StackLayout>
            </dxco:DXPopup>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>



