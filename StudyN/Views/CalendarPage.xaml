<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dxsch="clr-namespace:DevExpress.Maui.Scheduler;assembly=DevExpress.Maui.Scheduler"
             Title="Calendar Page"
             IconImageSource="scheduler"
             BackgroundColor="{StaticResource NormalBackgroundColor}"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             ios:Page.UseSafeArea="true"
             x:Class="StudyN.Views.CalendarPage">
    <Shell.TitleView>
        <StackLayout
            Orientation="Horizontal"
            HorizontalOptions="Center"
            Spacing="5">
            <Button Text="Daily"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            BorderColor="Black"
            BorderWidth="1"
            TextColor="Black"
            BackgroundColor="White"
            Clicked="OnDailyClicked"
            ></Button>
            <Button Text="Weekly"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            BorderColor="Black"
            BorderWidth="1"
            TextColor="Black"
            BackgroundColor="White"
            Clicked="OnWeeklyClicked"
            ></Button>
            <Button Text="Monthly"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            BorderColor="Black"
            TextColor="Black"
            BorderWidth="1"
            BackgroundColor="White"
            Clicked="OnMonthlyClicked"
            ></Button>
        </StackLayout>
    </Shell.TitleView>
    <ContentPage.Content>
        <StackLayout>
            <dxsch:DayView x:Name="dayView"                           
                           Tap="Handle_onCalendarTap_FromDayView"
                           LongPress="Handle_onCalendarHold_FromDayView">
                <dxsch:DayView.DataStorage>
                    <dxsch:SchedulerDataStorage x:Name="SchedulerStorage">
                        <dxsch:SchedulerDataStorage.DataSource>
                            <dxsch:DataSource AppointmentsSource="{Binding Appointments}"
                                              AppointmentLabelsSource="{Binding AppointmentCategories}"
                                              AppointmentStatusesSource="{Binding AppointmentStatuses}">
                                <dxsch:DataSource.AppointmentMappings>
                                    <dxsch:AppointmentMappings 
                                    Id="Id"
                                    Start="Start" 
                                    End="End" 
                                    Subject="Subject"
                                    LabelId="LabelId"
                                    Location="Location"
                                    Reminder="ReminderInfo"
                                    RecurrenceInfo="RecurrenceInfo" 
                                    StatusId="StatusId"
                                    />
                                </dxsch:DataSource.AppointmentMappings>
                                <dxsch:DataSource.AppointmentLabelMappings>
                                    <dxsch:AppointmentLabelMappings 
                                        Caption="Caption"
                                        Color="Color"
                                        Id="Id"/>
                                </dxsch:DataSource.AppointmentLabelMappings>
                                <dxsch:DataSource.AppointmentStatusMappings>
                                    <dxsch:AppointmentStatusMappings 
                                        Caption="Caption"
                                        Color="Color"
                                        Id="Id"/>
                                </dxsch:DataSource.AppointmentStatusMappings>
                            </dxsch:DataSource>
                        </dxsch:SchedulerDataStorage.DataSource>
                    </dxsch:SchedulerDataStorage>
                </dxsch:DayView.DataStorage>
            </dxsch:DayView>
            
            <dxsch:WeekView x:Name="weekView"
                            Tap="Handle_onCalendarTap_FromWeekView"
                            LongPress="Handle_onCalendarTap_FromWeekView">
            </dxsch:WeekView>
            <dxsch:MonthView x:Name="monthView"
                             Tap="Handle_onCalendarTap_FromMonthView"
                             LongPress="Handle_onCalendarTap_FromMonthView">
            </dxsch:MonthView>
        </StackLayout>
        </ContentPage.Content>
</ContentPage>
    
