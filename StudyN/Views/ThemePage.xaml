<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudyN.Views.ThemePage"
             Title="ThemePage">
    <VerticalStackLayout>
        <Frame 
                BorderColor="{DynamicResource Primary}"
                CornerRadius="5"
                Padding="8"
                BackgroundColor="{DynamicResource NormalBackgroundColor}">
            <StackLayout Spacing="3">
                <BoxView 
                        Color="{DynamicResource Primary}"
                        HeightRequest="2"
                        HorizontalOptions="Fill" />

                <!-- Buttons in settings page to change the colors, of just the buttons for now-->
                <Button
                        Text="Light mode"
                        Style="{DynamicResource PrimaryButton}"
                        Clicked="Button_ClickedLight"/>
                <Button
                        Text="Dark Mode"
                        Style="{DynamicResource PrimaryButton}"
                        Clicked="Button_ClickedDark"/>
                <Button
                        Text="High Contrast Mode"
                        Style="{DynamicResource PrimaryButton}"
                        Clicked="Button_ClickedContrast"/>
            </StackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>