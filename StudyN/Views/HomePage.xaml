<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dxdf="clr-namespace:DevExpress.Maui.DataForm;assembly=DevExpress.Maui.Editors"
             xmlns:dxc="clr-namespace:DevExpress.Maui.Charts;assembly=DevExpress.Maui.Charts"
             x:Class="StudyN.Views.HomePage"
             Title="{Binding Title}"
             IconImageSource="charts">
    <ContentPage.Content>
        <Grid>
            <Grid RowDefinitions="0,*,Auto">
                <Grid Grid.Row="1" RowDefinitions="Auto, Auto, Auto" Padding="20,15,20,15" RowSpacing="10" TranslationY ="200">
                    <dxdf:DataFormView x:Name="linkDataForm" DataObject="{Binding .}" CommitMode="PropertyChanged" ContentPadding="0" EditorLabelWidth="30">
                        <dxdf:DataFormTextItem InplaceLabelText="Google Calendar Link"
                                               LabelMaxWidth="300"
                                               FieldName="fileName"
                                               IsLabelVisible="False" 
                                               Placeholder="Enter link to iCal file(.ics)"/>
                    </dxdf:DataFormView>
                </Grid>
                <Button 
                    Grid.Row="1"
                    Grid.Column="1"
                    Grid.ColumnSpan="1"
                    Text="Submit"
                    Clicked="OnSubmitClick"
                    VerticalOptions="Start"
                    HorizontalOptions="End"
                    TranslationX="-20"
                    TranslationY="300"/>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>