<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dxg="clr-namespace:DevExpress.Maui.DataGrid;assembly=DevExpress.Maui.DataGrid"
             xmlns:ViewModels="clr-namespace:StudyN.ViewModels"
             xmlns:local="clr-namespace:StudyN.Views"
             Title="Todays View"
             IconImageSource="grid"
             x:Class="StudyN.Views.HomePage">

    <ContentPage.BindingContext>
        <ViewModels:HomeViewModel />
    </ContentPage.BindingContext>

    <dxg:DataGridView x:Name ="myList" ItemsSource="{Binding TaskList}"
                      ShowAutoFilterRow="False"
                      DoubleTap="EditAppointment"
                      ColumnHeaderHeight="60">
        <!--Set the Columns to use.-->
        <dxg:DataGridView.Columns>
            <!-- AutoFilter is not shown to user to prevent them from manually filtering the Todays View. AutoFilterCondition is set to Equal so that any task that has the same day as today will be shown.-->
            <dxg:TextColumn FieldName="Name" Caption="Task">
                <dxg:TextColumn.HeaderContentTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Label Text="Task" />
                        </StackLayout>
                    </DataTemplate>
                </dxg:TextColumn.HeaderContentTemplate>
            </dxg:TextColumn>
            <dxg:DateColumn AllowAutoFilter="False" FieldName="StartTime" Caption="Start" DisplayFormat="hh:mmtt">
                <dxg:DateColumn.HeaderContentTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Label Text="Start Time" />
                        </StackLayout>
                    </DataTemplate>
                </dxg:DateColumn.HeaderContentTemplate>
            </dxg:DateColumn>
            <dxg:DateColumn x:Name="DateFilter" FieldName="DueTime" Caption="Due" DisplayFormat="hh:mm tt" AutoFilterCondition="Equals" AutoFilterValue="">
                <dxg:DateColumn.HeaderContentTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Label Text="Due Time" />
                        </StackLayout>
                    </DataTemplate>
                </dxg:DateColumn.HeaderContentTemplate>
            </dxg:DateColumn>
        </dxg:DataGridView.Columns>
        <!--Customize the appearance of group row.-->
        <dxg:DataGridView.GroupRowStyle>
            <dxg:GroupRowStyle FontSize="16" />
        </dxg:DataGridView.GroupRowStyle>
        <!--Customize the appearance of grid cells.-->
        <dxg:DataGridView.CellStyle>
            <dxg:CellStyle Padding="10" FontSize="24"/>
        </dxg:DataGridView.CellStyle>
        <!--Customize the appearance of column headers.-->
        <dxg:DataGridView.ColumnHeaderStyle>
            <dxg:ColumnHeaderStyle BackgroundColor="#EFEFEF" FontAttributes="Bold" />
        </dxg:DataGridView.ColumnHeaderStyle>
    </dxg:DataGridView>
</ContentPage>
             xmlns:dxdf="clr-namespace:DevExpress.Maui.DataForm;assembly=DevExpress.Maui.Editors"
             xmlns:dxc="clr-namespace:DevExpress.Maui.Charts;assembly=DevExpress.Maui.Charts"
             x:Class="StudyN.Views.HomePage"
             Title="{Binding Title}"
             IconImageSource="charts">
    <ContentPage.Content>
        <Grid>
            <Grid RowDefinitions="0,*,Auto">
                <Grid Grid.Row="1" RowDefinitions="Auto, Auto, Auto" Padding="20,15,20,15" RowSpacing="10" TranslationY ="200">
                    <Entry
                        Grid.ColumnSpan="1"
                        Placeholder="Enter link to Google or Canvas Calendar(.ics)"
                        ClearButtonVisibility="WhileEditing"
                        ReturnType="Go"
                        Keyboard="Url"
                        IsSpellCheckEnabled="false"
                        IsTextPredictionEnabled="false"
                        MaxLength="200"
                        TextChanged="Entry_TextChanged"/>
                </Grid>
                <Button 
                    Grid.Row="1"
                    Grid.Column="1"
                    Grid.ColumnSpan="1"
                    Text="Submit"
                    Clicked="Button_OnClick"
                    VerticalOptions="Start"
                    HorizontalOptions="End"
                    TranslationX="-20"
                    TranslationY="270"/>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>
